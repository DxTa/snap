<%= form_tag share_photo_via_email_path, remote: true, class: "miniPopupForm" do %>
  <h1>Email Photo</h1>
  <%= hidden_field_tag 'photo_id', photo.id %>
  <ul>
    <li>
      <h3>Recipient Name</h3>
      <%= text_field_tag 'name_to', nil, placeholder: "Your friend name" %>
    </li>
    <li>
      <h3>Recipient Email</h3>
      <%= email_field_tag 'email', nil, placeholder: "your friend email" %>
    </li>
    <li>
      <h3>Message</h3>
      <%= text_field_tag 'message', nil, placeholder: "Your message" %>
    </li>
  </ul>
  <div class="preview">
    <%= image_tag photo.image.url %>
  </div>
  <div class="form footer">
    <div class="footerButtons">
      <%= submit_tag "Email it", class: "btn btn-large" %>
    </div>
  </div>
<% end %>
