$("#unfollow_user_<%= @user.id %>").html("<%= escape_javascript(render partial: 'users/follow_user', locals: { :user => @user } ) %>");
<% @boxes.each do | box | %>
  $("#unfollow_box_<%= box.id %>").html("<%=j render partial: 'boxes/follow_box', locals: { box: box } %>");
