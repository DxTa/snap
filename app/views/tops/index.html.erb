<%if !signed_in? %>
  <h1>Welcome to Snap</h1>

  <div class="row center hero-unit">
    <%= link_to "Log in with Facebook", "/auth/facebook",
      class: "btn btn-large btn-primary" %>
    <%= link_to "Log in with Twitter", "/auth/twitter",
      class: "btn btn-large btn-primary" %>
    <br>
    <%=image_tag("hr.png")%>
    <%= form_tag(sessions_path) do %>
      <%= text_field_tag :email,nil ,placeholder: "Email" %>
      <%= password_field_tag :password %>
      <%= submit_tag "Sign in", class: "btn btn-large btn-primary" %>
    <% end %>
    <p><%= link_to "Sign up now!",signup_path %></p>
    <p><%= link_to "Forgot password!",forgot_path %></p>
  </div>


<%else%>

<div id="wrapper" class="BoardLayout" >
  <div id="ColumnContainer" >

    <section class="content">
      <%= render :partial => 'shared/photos_paginate' %>
    </section>

  </div>
</div>
<%end%>

