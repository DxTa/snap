<div class="userComment imageDescription">
  <div class="detailed">
    <%= link_to image_tag(c.user.avatar.thumb.url), user_path(c.user.id), class: "userThumbContainer" %>
    <div class="comment">
      <div class="commenter">
        <%=h link_to c.user.name, user_path(c.user.id), class: "descriptionCreator" %>
        <span class="commentTimeAgo"><%= time_ago_in_words(c.created_at) %></span>
      </div>
      <p class="commentContent"><%=h c.content %></p>
    </div>
  </div>
</div>
