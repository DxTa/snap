<h1 class="big-title" style="margin-bottom: 20px"> <%= @box.title %> </h1>
<div class="intermission" style="margin: 0">
  <h2>
    <%= @user.name %>
  </h2>
</div>

<div id="profile" class="hidefixed" >
  <div id="ContextBar" class="container sticky" style= "margin: 10px  0 20px 0 ">
    <div class="FixedContainer">
      <div class="action">
        <%if !current_user?(@user) %>
          <%= render 'follow_box_form', :box => @box if @box.id != nil%>
          <% else %>
            <a href= " <%=edit_box_path(@box)%>" class= "Button13 Button WhiteButton" style="width: 100%" >EDIT</a>
        <% end%>
        </div>
    </div>
  </div>
</div>


<section class="content">
  <%= render :partial => 'shared/photos_paginate' %>
</section>
