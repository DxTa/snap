<% provide(:title, 'Sign in') %>

<div class="login-logo-holder">
  <a href="#"/>
</div>

<div class="row center hero-unit">
  <%= link_to "Log in with Facebook", "/auth/facebook",
    class: "btn btn-large btn-primary" %>
  <%= link_to "Log in with Twitter", "/auth/twitter",
    class: "btn btn-large btn-primary" %>
  <br>
  <%=image_tag("hr.png")%>
  <%= form_tag sessions_path ,class: "login-form" do %>
    <%= text_field_tag :email,nil ,placeholder: "Email" %>
    <%= password_field_tag :password %>
    <%= submit_tag "Sign in", class: "btn btn-large btn-primary" %>
  <% end %>

  <div class="authen-btns">
    <p><%= link_to "Join now!",signup_path %></p>
    <p><%= link_to "Forgot password!",forgot_path %></p>
  </div>
</div>

